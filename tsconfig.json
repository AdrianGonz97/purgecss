{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": ["jest"],
    "rootDir": "."
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
